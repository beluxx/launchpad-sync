{% from "macros.j2" import opt -%}

[meta]
extends: ../launchpad-db-lazr.conf

[checkwatches]
batch_query_threshold: {{ checkwatches_batch_query_threshold }}
xmlrpc_url: http://{{ domain_xmlrpc_private }}:{{ port_xmlrpc }}/bugs

[launchpad_session]
database: {{ db_session }}
dbuser: {{ db_session_user }}

[librarianlogparser]
logs_root: {{ librarian_logs_dir }}/for_parsing

[malone]
debbugs_db_location: {{ var_dir }}/debbugs-mirror

[memcache]
servers: {{ memcache_servers }}

