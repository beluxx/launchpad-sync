<VirtualHost *:80>
    ServerName xmlrpc.{{ domain }}
    ServerAdmin {{ webmaster_email }}
        
    CustomLog /var/log/apache2/xmlrpc.{{ domain }}-access.log combined
    ErrorLog /var/log/apache2/xmlrpc.{{ domain }}-error.log

    Redirect permanent / https://xmlrpc.{{ domain }}/
</VirtualHost>

