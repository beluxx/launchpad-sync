<VirtualHost *:80>
    ServerName {{ domain_cron_control }}
    ServerAdmin {{ webmaster_email }}

    CustomLog /var/log/apache2/{{ domain_cron_control }}-access.log combined
    ErrorLog /var/log/apache2/{{ domain_cron_control }}-error.log

    DocumentRoot "{{ www_dir }}"
    <Directory "{{ www_dir }}/">
        Require all granted
    </Directory>
</VirtualHost>

